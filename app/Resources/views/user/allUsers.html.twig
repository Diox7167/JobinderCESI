{% extends 'base.html.twig' %}
{% block body %}

    <style>
        .table {
            border-collapse: collapse;
            margin: auto;
        }
        .table th, td {
            border-bottom: 1px solid #ddd;
            width: 250px;
            text-align: center;
            align: left;
        }
        h2{
            margin-left: 40%;
        }
    </style>

    <h2>Users in database</h2>
    <table class = "table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
        {% for x in data %}
            <tr>
                <td>{{ x.Id }}</td>
                <td>{{ x.Pseudo }}</td>
                <td>{{ x.Adress }}</td>
            </tr>
        {% endfor %}
    </table>


{% endblock %}